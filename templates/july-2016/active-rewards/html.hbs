		<td></td>
		<td class="container">

				<!-- content -->
				<div class="content">
					<table>
						<tr>
							<td align="center">
								<p class="footer">
									<a href="http://joindropin.com">Joindropin.com</a>
									<a href="http://joindropin.com/terms.html">Terms</a>
									<a href="http://joindropin.com/privacy.html">Privacy</a>
									<a href="http://dropin-email.us-east-1.elasticbeanstalk.com/unsubscribe/{{email}}">Unsubscribe</a>
								</p>
							</td>
						</tr>
					</table>
				</div><!-- /content -->

		</td>
		<td></td>
	</tr>
